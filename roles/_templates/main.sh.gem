#!/bin/bash -u
# See: ../_templates/README.md


ROLE_NAME="FIXME: set role name";

_installed() {
    if type gem > /dev/null 2>&1; then
        [[ -z $(gem list --local $ROLE_NAME | tail -n 1) ]] && return 1 || return 0
    fi
    return 1
}

version() {
    gem list --local $ROLE_NAME | head -n 1 | sed "s/$ROLE_NAME //" | sed -e "s/[()]//g"
}

install() {
    _installed || {
        depend install ruby
        gem install $ROLE_NAME
    }
}

upgrade() {
    install
}

#!/bin/bash -u
# See: ../_templates/README.md


is_installed() {
    type "$SETUP_CURRENT_ROLE_NAME" > /dev/null 2>&1; return $?
}

version() {
    "$SETUP_CURRENT_ROLE_NAME" --version
}

config() {
    return
}

install() {
    depend "install" "go"
    go get -u github.com/hhatto/$SETUP_CURRENT_ROLE_NAME/cmd/$SETUP_CURRENT_ROLE_NAME
    config
}

upgrade() {
    install
}
